{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "types": [],
    "typeRoots": ["./", "../node_modules/@types"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "include": ["./**/*.ts", "./types.d.ts"],
  "exclude": ["../src/**/*", "../public/**/*", "../api/**/*"]
}